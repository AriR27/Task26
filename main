import java.util.Random;

public class Ghost {
  private String[] m_colorCodes = new String[]{"white" , "yellow" , "purple" , "red"};
  private String m_color = "";
  
  public Ghost(){
    m_color = m_colorCodes[new Random().nextInt(m_colorCodes.length)];
  }
  
  public String getColor(){
    return m_color;
  }
}
